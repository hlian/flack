{
  "name": "flack",
  "version": "1.0.0",
  "description": "a slack concern",
  "main": "index.js",
  "scripts": {
    "start": "npm run -s watch",
    "watch": "watchify index.js -dv -t babelify -o ../public/bundle.js",
    "build": "NODE_ENV=production browserify index.js -t babelify -g uglifyify -o ../public/bundle.js",
    "test": "standard --verbose | snazzy"
  },
  "standard": {
    "ignore": [
      "public",
      "server.js"
    ]
  },
  "author": "Hao Lian <hi@haolian.org>",
  "license": "MIT",
  "dependencies": {
    "react": "~15.6.1",
    "react-dom": "~15.6.1",
    "whatwg-fetch": "^2.0.3",
    "immutability-helper": "~2.3.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.1.2",
    "babel-preset-react": "^6.1.2",
    "babel-preset-stage-0": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": "^13.1.0",
    "eslint": "^4.2.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "snazzy": "^4.0.1",
    "standard": "^8.0.0",
    "uglifyify": "^3.0.1",
    "watchify": "^3.9.0"
  }
}
